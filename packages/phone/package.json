{
    "name": "@domojs/phone",
    "version": "1.0.4",
    "description": "DomoJS Android companion app built with Capacitor",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "sync": "cap sync",
        "sync:android": "cap sync android",
        "sync:ios": "cap sync ios",
        "open:android": "cap open android",
        "open:ios": "cap open ios",
        "run:android": "cap run android",
        "run:ios": "cap run ios",
        "android:dev": "yarn build && yarn sync:android && yarn open:android",
        "ios:dev": "yarn build && yarn sync:ios && yarn open:ios",
        "android": "yarn build && yarn sync:android",
        "ios": "yarn build && yarn sync:ios"
    },
    "dependencies": {
        "@akala/commands": "^18.1.6",
        "@akala/config": "^7.2.21",
        "@akala/core": "^44.1.0",
        "@akala/fs": "^2.5.9",
        "@akala/pubsub": "^3.1.71",
        "@akala/sidecar": "^8.5.31",
        "@capacitor/android": "^7.4.4",
        "@capacitor/core": "^7.4.4",
        "@capacitor/filesystem": "^7.1.4",
        "@capacitor/ios": "^7.4.4",
        "@domojs/devices": "workspace:*",
        "@domojs/mqtt": "workspace:*"
    },
    "devDependencies": {
        "@capacitor/cli": "^7.4.4",
        "typescript": "^5.9.3",
        "vite": "^7.1.12"
    }
}
