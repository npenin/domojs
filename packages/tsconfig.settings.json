{
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "ES2022",
    "moduleResolution": "node16",
    "module": "Node16",
    "customConditions": ["node", "import"]
    // "noUnusedLocals": true
  }
}