{
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    // "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "customConditions": [
      "node",
      "module",
      "import"
    ]
    // "noUnusedLocals": true
  }
}