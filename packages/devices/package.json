    "@akala/json-rpc-ws": "9.4.1",
    "@akala/pm": "^3.1.3",
    "@akala/server": "^8.1.11",
    "@akala/sidecar": "^0.0.21",
    "@akala/storage": "^2.4.9",
    "@fortawesome/free-brands-svg-icons": "6.1.1",
    "snyk": "1.912.0",
    "uuid": "8.3.2",
    "ws": "8.5.0"
  },
  "deprecated": false,
  "description": "",
  "devDependencies": {
    "@domojs/theme-default": "workspace:*",
    "@popperjs/core": "2.11.5",
    "@types/debug": "4.1.7",
    "@types/express-serve-static-core": "4.17.28",
    "@types/uuid": "8.3.4",
    "@types/webpack-env": "1.16.4",
