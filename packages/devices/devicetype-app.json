{
    "pubusub": "@domojs/pubsub",
    "store": {
        "provider": "file",
        "providerOptions": {
            "rootDbName": "./db/devices"
        },
        "models": {
            "DeviceInit": {
                "fields": {
                    "name": {
                        "isKey": true,
                        "type": {
                            "type": "string",
                            "length": 250
                        },
                        "generator": "business"
                    },
                    "body": {
                        "isKey": false,
                        "type": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "plugins": []
}