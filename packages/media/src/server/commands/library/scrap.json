{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "": {
        "inject": [
            "$container",
            "params.0",
            "params.1"
        ]
    },
    "fs": {
        "inject": [
            "$container",
            "params.0",
            "params.1"
        ]
    },
    "jsonrpc": {
        "inject": [
            "$container",
            "params.0",
            "params.1"
        ]
    },
    "cli": {
        "inject": [
            "$container",
            "options.path",
            "context.args"
        ],
        "options": {
            "path": {
                "needsValue": true,
                "normalize": true
            }
        },
        "usage": "scrap <path> [...scrappers]"
    }
}