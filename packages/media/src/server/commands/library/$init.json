{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "fs": {
        "inject": [
            "params.0",
            "params.1"
        ]
    },
    "cli": {
        "inject": [
            "context",
            "options.configPath",
            "$container"
        ],
        "options": {
            "configPath": {
                "normalize": true,
                "doc": "Path to the configuration file",
                "needsValue": true
            }
        }
    },
    "": {
        "inject": [
            "params.0",
            "params.1"
        ]
    }
}