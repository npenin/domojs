{
    "plugins": [
        "@akala/commands/akala",
        "@akala/config/akala",
        "@akala/pm/akala",
        "@akala/server/akala"
    ],
    "pm": {
        "containers": {
            "pm": {
                "commandable": true,
                "stateless": false,
                "path": "npm:///@akala/pm/commands.json",
                "type": "nodejs"
            },
            "@domojs/rfx": {
                "path": "npm:///@domojs/rfx/commands.json",
                "commandable": true,
                "type": "nodejs"
            },
            "@domojs/devices": {
                "path": "npm:///@domojs/devices/device-commands.json",
                "commandable": true,
                "type": "nodejs"
            },
            "weather": {
                "path": "npm:///@domojs/weather/commands.json",
                "commandable": true,
                "type": "nodejs"
            },
            "zigate": {
                "path": "npm:///@domojs/zigate/commands.json",
                "commandable": true,
                "type": "nodejs"
            }
        },
        "mapping": {
            "pm": {
                "container": "pm",
                "connect": {}
            },
            "@domojs/devices": {
                "container": "@domojs/devices",
                "connect": {
                    "jsonrpc+unix://./devices.sock": {}
                },
                "autostart": true
            }
        },
        "plugins": []
    },
    "commands": {},
    "@domojs/devices": {}
}