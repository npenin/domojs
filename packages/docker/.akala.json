{
    "plugins": [
        "@akala/commands/akala",
        "@akala/config/akala",
        "@akala/pm/akala",
        "@akala/server/akala"
    ],
    "pm": {
        "containers": {
            "containers": {
                "pm": {
                    "commandable": true,
                    "stateless": false,
                    "path": "npm:///@akala/pm/commands.json",
                    "cwd": "/usr/src/akala"
                },
                "@domojs/rfx": {
                    "path": "npm:///@domojs/rfx/commands.json",
                    "commandable": true
                },
                "@domojs/devices": {
                    "path": "npm:///@domojs/devices/device-commands.json",
                    "commandable": true
                },
                "@domojs/devicetype": {
                    "path": "npm:///@domojs/devices/devicetype-commands.json",
                    "commandable": true
                },
                "weather": {
                    "path": "npm:///@domojs/weather/commands.json",
                    "commandable": true
                },
                "zigate": {
                    "path": "npm:///@domojs/zigate/commands.json",
                    "commandable": true
                }
            }
        },
        "mapping": {
            "pm": {
                "container": "pm",
                "connect": {
                    "jsonrpc+unix://./pm.sock": {}
                }
            },
            "@domojs/devicetype": {
                "container": "@domojs/devicetype",
                "connect": {
                    "jsonrpc+unix://./device-type.sock": {}
                },
                "autostart": true
            },
            "@domojs/devices": {
                "container": "@domojs/devices"
            }
        },
        "externals": []
    }
}