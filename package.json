{
  "name": "domojs",
  "repository": "https://github.com/npenin/domojs",
  "author": "npenin <nicolas.penin@dragon-angel.fr>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@akala/automate": "^1.2.22",
    "@akala/automate-yamlloader": "^1.1.23",
    "@akala/commands": "^3.9.4",
    "@akala/pm": "^3.10.1",
    "@akala/semantic-release": "^0.14.18",
    "typescript": "^4.8.4"
  },
  "resolutions": {
    "@akala/pm": "portal:../akala/packages/pm",
    "@akala/cli": "portal:../akala/packages/cli",
    "@akala/commands": "portal:../akala/packages/commands",
    "@akala/core": "portal:../akala/packages/core",
    "@akala/config": "portal:../akala/packages/config",
    "@akala/json-rpc-ws": "portal:../akala/packages/json-rpc-ws"
  },
  "scripts": {
    "publish-all": "yarn akala-automate-runner --loader @akala/automate-yamlloader/ --file @akala/semantic-release/publish.yml --verbose=silly",
    "ci-deps": "git commit -m 'chore(deps): update dependencies'",
    "generate": "yarn workspaces foreach -A run generate",
    "generate-metadata": "yarn workspaces foreach -A run generate-metadata"
  },
  "packageManager": "yarn@3.2.4"
}
